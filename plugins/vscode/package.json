{
    "name": "argon",
    "description": "Argon Extension for VS Code",
    "version": "0.0.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/ucb-substrate/argon"
    },
    "engines": {
        "vscode": "^1.100.0"
    },
    "main": "./out/extension",
    "contributes": {
        "languages": [{
            "id": "argon",
            "aliases": ["Argon", "argon"],
            "extensions": [".ar"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "argon",
            "scopeName": "source.argon",
            "path": "./syntaxes/argon.tmLanguage.json"
        }],
        "configuration": {
            "type": "object",
            "title": "Argon configuration",
            "properties": {
                "argon.argonRepoPath": {
                    "scope": "resource",
                    "type": "string",
                    "description": "The path of the local Argon repository (for development purposes)."
                },
                "argon.log.level": {
                    "scope": "resource",
                    "type": "string",
                    "default": "",
                    "description": "The Argon log level. Follows [`RUST_LOG`](https://docs.rs/tracing-subscriber/latest/tracing_subscriber/fmt/index.html#filtering-events-with-environment-variables) syntax"
                }
            }
        },
        "commands": [
            {
                "command": "argon.openCell",
                "title": "Argon: Open Cell"
            },
            {
                "command": "argon.startGui",
                "title": "Argon: Start GUI"
            },
            {
                "command": "argon.log",
                "title": "Argon: Open Log"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "lint": "eslint"
    },
    "dependencies": {
        "glob": "^11.0.0",
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/vscode": "^1.100.0",
        "@vscode/test-electron": "^2.3.9",
        "@eslint/js": "^9.13.0",
        "@stylistic/eslint-plugin": "^2.9.0",
        "@types/mocha": "^10.0.6",
        "@types/node": "^22",
        "eslint": "^9.13.0",
        "mocha": "^10.3.0",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.39.0"
    }
}
